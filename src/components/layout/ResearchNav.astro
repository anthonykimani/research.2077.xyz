---
const tags = [
  "DeFi",
  "Governance",
  "Infrastructure",
  "Layer1",
  "Layer2",
  "Protocol R&D",
];
---

<nav class="researchNav">
  {
    tags.map((tag) => {
      return (
        <a
          class="nav-link carousel-cell"
          href={`/blog/tags/${tag.toLowerCase()}/`}
        >
          {tag}
        </a>
      );
    })
  }
</nav>

<style lang="scss">
  .researchNav {
    margin-block-end: 4rem;
    padding-top: 1.2rem;
    padding-bottom: 1.2rem;
    display: flex;
    position: sticky;
    top: 0;
    left: 0;
    flex-direction: column;
    column-gap: 2rem;
    overflow-x: auto;
    width: 200px;
    max-width: 200px;
    height: 100%;
    min-width: 200px;
    white-space: nowrap;
    scrollbar-width: none;

    a {
      background-color: white;
      display: flex;
      align-items: center;
      column-gap: 0.2rem;
      font-size: 1rem;
      font-weight: 700;
      color: var(--leather-dark-hover);
      min-width: fit-content;
      padding-inline: 0.4rem;
      padding-block: 0.5rem;
      border-radius: 0.2rem;
      border: 2px solid black;
      margin: 0.2rem;
      font-family: "Sanchez", serif;

      &:hover {
        background-color: var(--semantic-green-dark-active);
      }
    }

    .nav-arrow {
      background-color: transparent;
      border: none;
      cursor: pointer;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 0.5rem;
      margin: 0 0.5rem;
      font-size: 1.25rem;
      color: var(--semantic-green-default-normal);

      &:hover {
        color: var(--semantic-green-dark-active);
      }

      &.active {
        color: var(--semantic-green-dark-active);
      }
    }
  }
</style>