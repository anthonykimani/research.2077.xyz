---
import { getCollection } from "astro:content";
import BlogList from "../blog/BlogList.astro";
import { Button } from "@eliancodes/brutal-ui";

interface Props {
  count?: number;
}

const { count } = Astro.props;

const posts = await getCollection('blog').then((posts) =>
  posts.reverse().slice(0, count ?? 2000)
);
---

<section class="mt-8 mb-24">
  <div class="flex justify-between items-start">
    <div class="w-full">
      <h2 class="text-2xl md:text-4xl lg:text-6xl mb-2">Research</h2>
      <p class="mb-16 text-xl">
        Deep dives and technical analyses on Ethereum infrastructure, protocols,
        and applications
      </p>
    </div>

    <div class="hidden">
      <Button href="/blog/">view all research &rarr;</Button>
    </div>
  </div>
  <BlogList posts={posts} />
</section>